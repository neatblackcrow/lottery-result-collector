@model IEnumerable<LotteryResult.Models.role>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>รายการบทบาท</h2>

<p>
    @Html.ActionLink("สร้าง", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("แก้ไข", "Edit", new { id=item.id }) |
            @Html.ActionLink("รายละเอียด", "Details", new { id=item.id }) |
            @Html.ActionLink("ลบ", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
