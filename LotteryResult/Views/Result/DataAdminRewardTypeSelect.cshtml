@model LotteryResult.Models.ViewModels.rewardTypeSelect

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>เลือกประเภทรางวัล</h2>

@using (Html.BeginForm("RewardSelect", "Result"))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>เลือกประเภทรางวัลที่ได้จากการสุ่มจับ</h4>
    <hr />

        @foreach (LotteryResult.MvcApplication.ResultCollectionStats.RewardStatus rs in Model.currentRewardList)
        {
            if (rs.isUsed == false)
            {
                <div class="form-group">
                    <div class="col-md-10">
                        <div class="radio">
                            <label>
                                @Html.RadioButtonFor(model => model.selectedRewardId, rs.reward.id)
                                @Html.DisplayFor(r => rs.reward.name)
                            </label>
                        </div>
                    </div>
                </div>

            }
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="เลือก" class="btn btn-default" />
            </div>
        </div>
</div>
}
