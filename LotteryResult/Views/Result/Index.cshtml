@model IEnumerable<LotteryResult.Models.ViewModels.resultViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>รายการผลรางวัล</h2>

<div class="row" style="margin-bottom: 10px;">
    <div class="col-md-6">
        <a href="@Url.Action("Create")" class="btn btn-default">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> สร้าง
        </a>
        <a href="@Url.Action("CreateResultTxt")" class="btn btn-default">
            <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> สร้างแฟ้มข้อมูล result.txt
        </a>
        <a href="@Url.Action("CreateResultExcel")" class="btn btn-default">
            <span class="glyphicon glyphicon-list" aria-hidden="true"></span> สร้างแฟ้มข้อมูล Excel
        </a>
    </div>

    <div class="col-md-6">
        @using (Html.BeginForm("Index", "Result", FormMethod.Get))
        {
        <div class="form-inline text-right">
            <div class="form-group">
                @Html.Label("ประจำปี: ", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("year", null, htmlAttributes: new { @class = "form-control", @style = "width: auto;" })
            </div>

            <div class="form-group">
                @Html.Label("งวดที่: ", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("round", null, htmlAttributes: new { @class = "form-control", @style = "width: auto;" })
            </div>

            <div class="form-group">
                @Html.Label("ประเภทรางวัล: ", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("reward_type", null, htmlAttributes: new { @class = "form-control", @style = "width: auto;" })
            </div>

            <button type="submit" class="btn btn-default">
                <span class="glyphicon glyphicon-filter" aria-hidden="true"></span>
            </button>
        </div>
        }
    </div>
</div>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.round)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.round_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reward_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reward_order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.result_order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.confirmed_result)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.round)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.round_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reward_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reward_order)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.result_order)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.confirmed_result)
        </td>
    </tr>
}

</table>
