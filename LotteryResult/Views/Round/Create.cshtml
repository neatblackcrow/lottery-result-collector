@model LotteryResult.Models.round

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>สร้างงวด</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>ข้อมูลงวด</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.date, "{0:d/M/yyyy}", htmlAttributes: new { @class = "form-control", data_provide = "datepicker" })
            @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.round1, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.round1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.round1, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            @Html.EditorFor(model => model.is_active)
            @Html.LabelFor(model => model.is_active, htmlAttributes: new { @class = "control-label" })
            @Html.ValidationMessageFor(model => model.is_active, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">
                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> บันทึก
            </button>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("ย้อนกลับไปที่รายการ", "Index")
</div>

@section scripts {
    @Scripts.Render("~/bundles/bootstrap-datepicker")
}