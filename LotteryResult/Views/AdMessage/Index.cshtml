@model IEnumerable<LotteryResult.Models.round>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>รายการข้อความโฆษณา</h2>

<div class="row" style="margin-bottom: 10px;">

    <div class="col-md-6 col-md-offset-6">
        @using (Html.BeginForm("Index", "AdMessage", FormMethod.Get))
        {
            <div class="form-inline text-right">
                <div class="form-group">
                    @Html.Label("ประจำปี: ", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("year", null, htmlAttributes: new { @class = "form-control" , @style = "width: auto;" })
                </div>

                <button type="submit" value="" class="btn btn-default">
                    <span class="glyphicon glyphicon-filter" aria-hidden="true"></span>
                </button>
            </div>
        }
    </div>
</div>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.round1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ad_message.user.username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ad_message.create_timestamp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ad_message.advertise_msg)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.round1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ad_message.user.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ad_message.create_timestamp)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.ad_message.advertise_msg)
        </td>
        <td>
            @Html.ActionLink("แก้ไข", "Edit", new { id=item.id }) |
            @Html.ActionLink("รายละเอียด", "Details", new { id=item.id }) |
            @Html.ActionLink("ลบ", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
