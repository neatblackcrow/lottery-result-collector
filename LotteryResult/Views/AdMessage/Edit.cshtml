@model LotteryResult.Models.round

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>แก้ไขข้อความโฆษณา</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ข้อความโฆษณา</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.date, "{0:d/M/yyyy}", htmlAttributes: new { @class = "form-control col-md-2", @readonly = true })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.round1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.round1, htmlAttributes: new { @class = "form-control col-md-2", @readonly = true })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ad_message.advertise_msg, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ad_message.advertise_msg, htmlAttributes: new { @class = "form-control", rows = "20", @id = "text_area", @style = "max-width: 100%" })
                @Html.ValidationMessageFor(model => model.ad_message.advertise_msg, "", new { @class = "text-danger" })
                <span id="text_counter">เหลือ 5000 คำ</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> บันทึก
                </button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("ย้อนกลับไปที่รายการ", "Index")
</div>

@section scripts {
    @Scripts.Render("~/bundles/ad-message-validator")
}